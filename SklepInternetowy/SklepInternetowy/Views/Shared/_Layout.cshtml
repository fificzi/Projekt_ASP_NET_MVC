<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SklepInternetowy</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SklepInternetowy.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">SklepInternetowy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                    <ul class="navbar-nav flex-grow-1 align-items-center">

                        <li class="nav-item">
                            <a class="btn btn-outline-primary rounded-pill mx-1" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-primary rounded-pill mx-1" asp-controller="Contact" asp-action="Create">Kontakt</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="btn btn-outline-danger dropdown-toggle rounded-pill mx-1" href="#" role="button" data-bs-toggle="dropdown">
                                    Panel Admina
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Zarządzaj Kategoriami</a></li>
                                    <li><a class="dropdown-item" asp-controller="Products" asp-action="Index">Zarządzaj Produktami</a></li>
                                    <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index">Zarządzaj Zamówieniami</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Contact" asp-action="Index">📩 Wiadomości od klientów</a></li>
                                </ul>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="btn btn-outline-success rounded-pill mx-1 fw-bold" asp-controller="Cart" asp-action="Index">
                                🛒 Koszyk
                            </a>
                        </li>

                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - SklepInternetowy - <a asp-controller="Contact" asp-action="Create">Kontakt</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>